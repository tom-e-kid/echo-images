{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Echo.images",
  "compilerOptions": {
    "baseUrl": "src",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "public",
    "tmp",
    "src/**/*.test.ts"
  ]
}
